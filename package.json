{
  "name": "insider-threat-detection",
  "version": "1.0.0",
  "description": "Desktop Insider Threat Detection System - System-wide keystroke monitoring",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "iohook": "^0.9.3",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.threatguard.app",
    "productName": "ThreatGuard",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}